<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="Indicators">

        <attr name="indicators" format="integer"/>
        <attr name="active_color" format="integer" />
        <attr name="inactive_color" format="integer"/>
        <attr name="inactive_item" format="dimension"/>
        <attr name="active_item" format="dimension"/>
        <attr name="number_active" format="integer"/>
    </declare-styleable>


    <style name="Buttoncheck" parent="Base.Widget.AppCompat.Button">
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:text">Next indicator</item>
    </style>

</resources>
